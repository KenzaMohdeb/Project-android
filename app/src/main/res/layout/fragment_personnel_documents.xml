<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.ui.message.PersonnelDocumentsFragment">

    <include layout="@layout/background_image"/>

    <LinearLayout
        android:id="@+id/first_content"
        android:layout_width="match_parent"
        android:layout_height="136dp"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="20dp"
        android:padding="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        android:background="@drawable/shape_rectangle"
        >
    <LinearLayout
        android:id="@+id/content_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
            <TextView
                android:id="@+id/document_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mise en pratique du rétablissement"
                android:textColor="@color/purple"
                android:fontFamily="@font/karla_bold"
                android:textSize="15sp" />
        <ImageView
            android:layout_width="9dp"
            android:layout_height="9dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:src="@drawable/new_message_icon" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/top1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        >
        <ImageView
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:src="@drawable/file_present"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/karla_regular"
            android:textSize="14sp"
            android:textColor="@color/colorGrayContrast"
            android:text="JPG, 358 KB"

            />
    </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Envoyé par "
                    android:textSize="14sp"
                    android:textColor="@color/slate"
                    android:fontFamily="@font/karla_regular"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rémi Lalonde"
                    android:textColor="@color/purple"
                    android:fontFamily="@font/karla_regular"
                    android:textSize="14sp"/>


            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/slate"
                android:fontFamily="@font/karla_regular"
                android:text="17 juillet 2022"/>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/second_content"
        android:layout_width="match_parent"
        android:layout_height="136dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_rectangle"
        android:orientation="vertical"
        android:padding="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.175"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/first_content"
        app:layout_constraintVertical_bias="0.405">

        <LinearLayout
            android:id="@+id/content_top1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/document_title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Soutien aux proches"
                android:textColor="@color/slate"
                android:fontFamily="@font/karla_bold"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/top2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:src="@drawable/file_present" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="JPG, 358 KB"
                android:textColor="@color/colorGrayContrast"
                android:textSize="14sp"
android:fontFamily="@font/karla_regular"
                />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Envoyé par "
                    android:textColor="@color/slate"
                    android:fontFamily="@font/karla_regular"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rémi Lalonde"
                    android:textColor="@color/purple"
                    android:textSize="14sp"
                    android:fontFamily="@font/karla_regular"
                    />


            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="17 juillet 2022"
                android:textColor="@color/slate"
                android:textSize="14sp"
                android:fontFamily="@font/karla_regular"
                />

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>