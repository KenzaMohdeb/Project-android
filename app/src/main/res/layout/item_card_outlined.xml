<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_cardable_hybrid_container"
    android:layout_width="wrap_content"
    android:layout_height="26dp"
    android:backgroundTint="?attr/colorTertiary"
    android:layout_marginTop="12dp"
    android:paddingHorizontal="10dp"
    android:background="@drawable/shape_outline"
    android:layout_marginEnd="10dp">

    <ImageView
        android:id="@+id/item_cardable_hybrid_icon"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/item_cardable_hybrid_title"
        app:tint="?attr/colorTertiary"
        android:contentDescription="@string/generic_decorative_image_description" />

    <TextView
        android:id="@+id/item_cardable_hybrid_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        app:lineHeight="15.2sp"
        android:letterSpacing="-0.01"
        android:fontFamily="@font/karla_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_cardable_hybrid_icon"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
