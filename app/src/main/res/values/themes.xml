<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="CommonTheme" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryVariant">@color/mauve</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange</item>
        <item name="colorSecondaryVariant">@color/light_orange</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Tertiary brand color -->
        <item name="colorTertiary">@color/slate</item>
        <!-- Customize your theme here. -->
        <item name="background">@color/light_grey</item>
        <item name="colorSurface">@color/white</item>
        <item name="android:textColor">@color/slate</item>
        <item name="bottomSheetDialogTheme">@style/ModalBottomSheetDialog</item>
        <item name="elevationOverlayEnabled">false</item>
    </style>

    <style name="Theme.Mentallys.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Mentallys.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Mentallys.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Launcher theme. -->
    <style name="Launcher.Theme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
</resources>