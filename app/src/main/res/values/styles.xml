<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextDefault">
        <item name="font">@font/karla_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorTextDefault</item>
    </style>

    <style name="ActionButton" parent="@android:style/Widget.ActionButton">
        <item name="android:paddingEnd">20dp</item>
    </style>

    <style name="TextLabelDefault">
        <item name="font">@font/karla_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorTextLabelDefault</item>
    </style>

    <style name="TextInputDefault">
        <item name="font">@font/karla_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="hintTextColor">@color/colorTextHintDefault</item>
        <item name="android:textColor">@color/colorTextDefault</item>
    </style>

    <style name="ButtonPrimary">
        <item name="android:background">@drawable/bg_button_primary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorTextWhite</item>
        <item name="font">@font/inter_semibold</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="aucun_docum">
        <item name="android:textSize">
            20sp
        </item>
        <item name="android:letterSpacing">
            -0.02
        </item>
        <item name="android:textColor">
            #261726
        </item>
    </style>
    <style name="LowerCaseMenuTextAppearance" parent="android:TextAppearance.Holo.Widget.ActionBar.Menu">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="messages">
        <item name="font">@font/karla_regular</item>
        <item name="android:actionMenuTextAppearance">@style/LowerCaseMenuTextAppearance</item>
        <item name="android:textSize">
            16sp
        </item>

        <item name="android:letterSpacing">
            -0.02
        </item>

        <item name="android:textColor">
            #261726
        </item>
        <item name="android:textAllCaps">false</item>
    </style>


    <!--  tool bar style-->

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- actionMenuTextColor is the color of the text of action (menu) items  -->
        <item name="actionMenuTextColor">@color/slate</item>
        <!-- Tints the input fields like checkboxes and text fields -->
        <item name="colorAccent">#261726</item>

        <!-- Applies to views in their activated state (i.e checked or switches) -->
        <item name="colorControlActivated">#261726</item>
        <!-- Applied to framework control highlights (i.e ripples or list selectors) -->
        <item name="colorControlHighlight">#261726</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>

        <!-- Enable these below if you want clicking icons to trigger a ripple effect -->
        <!--
        <item name="selectableItemBackground">?android:selectableItemBackground</item>
        <item name="selectableItemBackgroundBorderless">?android:selectableItemBackground</item>
        -->
    </style>

    <!-- This configures the styles for the title within the Toolbar  -->
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">21sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:capitalize">words</item>
    </style>

    <style name="RoundedButton">
        <item name="android:radius">32dp</item>
        <item name="cornerRadius">32dp</item>
    </style>

    <style name="checkBoxStyle" parent="Base.Theme.AppCompat">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColorSecondary">@color/grey</item>
    </style>

    <style name="BottomNavigationView">
        <item name="colorSecondaryContainer">@color/mauve</item>
    </style>

    <!-- Base application theme. -->
    <style name="Theme.Mentallys" parent="CommonTheme">
        <!-- Status bar color. -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="actionButtonStyle">@style/ActionButton</item>
        <item name="android:actionButtonStyle">@style/ActionButton</item>
    </style>

    <style name="ModalBottomSheet" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@color/transparent</item>
    </style>


    <style name="ModalBottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/ModalBottomSheet</item>
    </style>

    <style name="ThemeOverlay.Material3.BottomAppBar.navTextInactive">
        <item name="fontFamily">@font/karla_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:spacing">-0.01sp</item>
    </style>

    <style name="ThemeOverlay.Material3.BottomAppBar.navTextActive">
        <item name="fontFamily">@font/karla_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:spacing">-0.01sp</item>
    </style>

    <style name="MyTextInputLayout_overlay">
        <item name="boxStrokeColor">@color/transparent</item>
        <item name="colorOnSurface">@color/transparent</item>
        <item name="colorPrimary">@color/transparent</item>
    </style>
</resources>